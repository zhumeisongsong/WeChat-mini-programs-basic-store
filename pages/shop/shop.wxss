.container {
  display: flex;
}

swiper {
  width: 100%;
  padding-left: 120px;
  min-height: 100vh;
}

.menu {
  display: flex;
  flex-direction: column;
  padding-top: 24px;
  flex-shrink: 0;
  width: 66px;
}

.menu .item {
  width: 100%;
  height: 24px;
  margin: 0 12px;
  line-height: 24px;
  text-align: center;
  background-color: #ccc;
  color: #333;
  letter-spacing: 1px;
  border-radius: 4px;
}

.menu .item.active {
  background-color: #fa506a;
  color: #fff;
}

.list {
  width: 100%;
  height: 100vh;
}

.good-image {
  flex-shrink: 0;
  width: 88px;
  height: 88px;
  margin-right: 12px;
  background-color: #eee;
  border-radius: 4px;
}

.list-item {
  display: flex;
  align-items: center;
  margin: 0 12px;
  padding: 6px 0;
}

.good-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  padding: 6px 0;
}

.good-text .name {
  font-size: 14px;
  display: block;
}

.good-text .des {
  height: 44px;
  font-size: 12px;
  color: #bbb;
}

.action {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.price {
  color: #fa506a;
}

.action-button {
  display: flex;
}

.action-icon {
  flex-shrink: 0;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  text-align: center;
  color: #fff;
  font-size: 14px;
  line-height: 20px;
}

.remove {
  background-color: #999;
}

.action-button .count {
  padding: 0 12px;
  line-height: 20px;
}

.add {
  background-color: #fa506a;
}

.footer-bar image {
  flex-grow: 1;
  width: 24px;
  height: 24px;
}

.icon-cart {
  position: relative;
  overflow: visible;
}

.icon-cart .dot {
  position: absolute;
  right: -5px;
  top: -5px;
  background: #fa506a;
  width: 12px;
  height: 12px;
  border-radius: 6px;
  color: #fff;
  font-size: 10px;
}

.total-mount {
  flex-grow: 1;
  padding-left: 6px;
  font-size: 14px;
  color: #fa506a;
}

.tab-item.active {
  display: block;
}

.tab-item {
  display: none;
}

/* modal */

.modal {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
}

.cart-container {
  position: absolute;
  bottom: 44px;
  width: 100%;
  background-color: #fff;
}

.cart-header {
  display: flex;
  align-items: center;
  padding: 0 12px;
  line-height: 36px;
  background-color: #f2f2f2;
  color: #999;
  font-size: 10px;
  overflow: hidden;
}

.cart-header .total-count {
  flex-grow: 1;
}

.cart-header .total-count .title {
  font-size: 14px;
  color: #333;
}

.cart-header .icon {
  width: 44px;
  text-align: right;
}

.cart-list {
  margin: 0 12px;
}

.cart-item {
  display: flex;
  align-items: center;
  height: 36px;
}

.cart-item .name {
  flex-grow: 1;
}

.cart-item .name +.price {
  padding-right: 12px;
}
