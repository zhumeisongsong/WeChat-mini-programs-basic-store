.cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 52vw;
  background: #fa506a;
  color: #fff;
}

.avatar {
  width:70px;
  height: 70px;
  border-radius: 35px;
  overflow: hidden;
}

.nick-name {
  padding-top: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list view {
  height: 44px;
  margin-left: 12px;
  padding-left: 12px;
  border-bottom: 1px solid #eee;
}

.list view text {
  display: block;
  width: 100%;
  line-height: 44px;
}

.copyright {
  display: block;
  margin-top: -36px;
  font-size: 12px;
  color: #999;
  text-align: center;
}
