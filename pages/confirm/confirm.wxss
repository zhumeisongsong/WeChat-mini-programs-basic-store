.container {
  padding-bottom: 45px;
}

.list-count {
  text-align: right;
}

.list-amount {
  text-align: right;
}

.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 45px;
  border-top: 1px solid #eee;
}

.total-amount {
  color: #fa506a;
  font-size: 14px;
}

.deliver-amount {
  flex-grow: 1;
  font-size: 12px;
  color: #999;
}

.auto-height {
  min-height: 120px;
}

textarea {
  height: 120px;
}

.list-text {
  width: 40%;
}

.list-text +input, .list-text+textarea {
  width: 200px;
  line-height: 44px;
}

.icon-right {
  flex-shrink: 0;
}
