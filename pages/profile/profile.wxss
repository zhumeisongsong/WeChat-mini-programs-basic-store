.cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 52vw;
  background: #fa506a;
  color: #fff;
}

.avatar {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  overflow: hidden;
}

.nick-name {
  padding-top: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 16px;
}

.text-list view image {
  width: 20px;
  height: 20px;
  margin: 12px 0;
}

.copyright {
  display: block;
  margin-top: -36px;
  font-size: 12px;
  color: #999;
  text-align: center;
}

.icon-container {
  padding: 12px 36px;
}

.icon-container text {
  color: #999;
}

.grey {
  width: 100vw;
  height: 12px;
  background: #f2f2f2;
}

.title {
  padding-left: 12px;
  font-size: 14px;
}
