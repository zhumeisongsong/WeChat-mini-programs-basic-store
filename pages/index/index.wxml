<view class="container">
  <!-- 需要使用 button 来授权登录 -->
  <view class="wx-auth">
    <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  </view>

  <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="unique">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </block>
  </swiper>

  <view class="icon-container">
    <view wx:for="{{icons}}" wx:key="unique" data-type="{{item.type}}" mode="widthFix" bindtap="onIconTap">
      <image src="{{item.src}}" />
      <text>{{item.text}}</text>
    </view>
  </view>

  <swiper class="notice" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" vertical="{{true}}">
    <block wx:for="{{imgUrls}}" wx:key="unique">
      <swiper-item>
        <text>测试公告</text>
      </swiper-item>
    </block>
  </swiper>

  <view class="video">
    <video id="myVideo" src="{{video}}" danmu-list="{{danmuList}}" enable-danmu danmu-btn controls></video>
  </view>

  <view class='title'>
    <text class='h1'>今日推荐</text>
    <text class='p'>全方位的生活指南，每天都有新乐趣</text>
  </view>

  <view class="normal-list">
    <view wx:for="{{list}}" wx:key="unique" class="normal-item" bindtap="onItemTap">
      <image src="{{item.src}}"></image>
      <text class='item-title'>{{item.title}}</text>
      <text class='item-title'>{{item.content}}</text>
    </view>
  </view>

</view>