<form class="container"  bindsubmit="formSubmit">
  <view class="text-list">
    <view class="ui-border-b">
      <text class="list-text">昵称</text>
      <input name='name' placeholder='用户昵称' value='{{name}}'/>
    </view>
    <view class="ui-border-b">
      <text class="list-text">手机号</text>
      <input name='mobile' placeholder='手机号' value='{{mobile}}' />
    </view>
    <view class="ui-border-b">
      <text class="list-text">邮箱</text>
      <input name='email' placeholder='有效邮箱'value='{{email}}'/>
    </view>
  </view>

  <button class="button" formType="submit">提交</button>
</form>